<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.inventorymanagementsystem.inventorymanagementsystem.controller.ReportController">
<top>
    <VBox spacing="10">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Text text="Reports" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label text="From:"/>
            <DatePicker fx:id="fromDatePicker"/>
            <Label text="To:"/>
            <DatePicker fx:id="toDatePicker"/>
            <Button text="Generate Report" onAction="#handleGenerateReport"/>
        </HBox>
    </VBox>
</top>

<center>
    <TableView fx:id="reportTable">
        <columns>
            <TableColumn text="ID" prefWidth="50">
                <cellValueFactory><PropertyValueFactory property="id"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Product" prefWidth="150">
                <cellValueFactory><PropertyValueFactory property="productName"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Type" prefWidth="80">
                <cellValueFactory><PropertyValueFactory property="transactionType"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Quantity" prefWidth="80">
                <cellValueFactory><PropertyValueFactory property="quantity"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Date" prefWidth="100">
                <cellValueFactory><PropertyValueFactory property="date"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Notes" prefWidth="200">
                <cellValueFactory><PropertyValueFactory property="notes"/></cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</center>

<bottom>
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <Button text="Export to CSV" onAction="#handleExportToCSV"/>
    </HBox>
</bottom>
</BorderPane>